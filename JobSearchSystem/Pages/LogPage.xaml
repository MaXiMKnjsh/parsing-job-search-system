<Page x:Class="JobSearchSystem.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JobSearchSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <ListView x:Name="List" MouseDoubleClick="List_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название запроса" Width="200" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="Дата" Width="200" DisplayMemberBinding="{Binding date}"/>
                    <GridViewColumn Header="Кол-во рез-в" Width="200" DisplayMemberBinding="{Binding count}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
