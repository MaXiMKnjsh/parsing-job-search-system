<Page x:Class="JobSearchSystem.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JobSearchSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">

    <Grid>
        <ListView x:Name="List" MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название вакансии" Width="250" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="Зарплата" Width="140" DisplayMemberBinding="{Binding salary}"/>
                        <GridViewColumn Header="Общие данные" Width="350" DisplayMemberBinding="{Binding city}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
